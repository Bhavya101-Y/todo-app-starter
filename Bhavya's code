	<script>
		const todoList = document.getElementById('todo-list');
		todoList.addEventListener('click', (e) => {
			if (e.target.type === 'checkbox') {
				const listItem = e.target.parentNode;
				listItem.classList.toggle('done');
			}
		});
	</script>
